{
  "name": "Post",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "ID do cliente associado"
    },
    "title": {
      "type": "string",
      "description": "T\u00edtulo ou descri\u00e7\u00e3o curta do post"
    },
    "caption": {
      "type": "string",
      "description": "Legenda completa do post"
    },
    "media_url": {
      "type": "string",
      "description": "URL da imagem ou v\u00eddeo principal"
    },
    "media_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "URLs de m\u00faltiplas imagens (at\u00e9 20)"
    },
    "media_type": {
      "type": "string",
      "enum": [
        "image",
        "video",
        "carousel"
      ],
      "default": "image"
    },
    "scheduled_date": {
      "type": "string",
      "format": "date"
    },
    "scheduled_time": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "idea",
        "production",
        "approved",
        "scheduled",
        "posted"
      ],
      "default": "idea"
    },
    "platform": {
      "type": "string",
      "enum": [
        "instagram",
        "facebook",
        "tiktok",
        "linkedin",
        "twitter"
      ],
      "default": "instagram"
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "author": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "client_id",
    "title",
    "scheduled_date",
    "status"
  ]
}