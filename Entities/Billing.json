{
  "name": "Billing",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "ID do cliente associado"
    },
    "description": {
      "type": "string",
      "description": "Descri\u00e7\u00e3o da cobran\u00e7a"
    },
    "amount": {
      "type": "number",
      "description": "Valor da cobran\u00e7a"
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Data de vencimento"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "paid",
        "overdue",
        "cancelled"
      ],
      "default": "pending"
    },
    "payment_date": {
      "type": "string",
      "format": "date",
      "description": "Data do pagamento"
    },
    "recurrence": {
      "type": "string",
      "enum": [
        "once",
        "monthly",
        "quarterly",
        "yearly"
      ],
      "default": "monthly"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "client_id",
    "amount",
    "due_date"
  ]
}